  "scripts": {
    "chain": "hardhat node --network hardhat --no-deploy --hostname 0.0.0.0",
    "fork": "hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "format-solidity": "npx prettier --write '**/*.sol'",
    "test": "npx hardhat test:jest",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "postdeploy": "GIT_BRANCH=\"$(git branch --show-current)\" GIT_COMMIT=\"$(git log -n 1 --pretty=%H)\" hardhat run scripts/publish.js && yarn generate-abi-interfaces",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "verify": "hardhat verify",
    "print-default-addresses": "ts-node ./scripts/print-addresses.ts",
    "generate-abi-interfaces": "yarn compile && ts-node ./scripts/generate-abi-interfaces.ts",
    "export-contracts": "ts-node ./scripts/export-contracts.ts",
    "generate-merkle-root": "ts-node ./scripts/generate-merkle-root.ts",
    "minify": "ts-node ./scripts/minify.ts",
    "upload-ipfs-remote": "ts-node ./scripts/upload-ipfs-remote.ts",
    "upload-ipfs-local": "ts-node ./scripts/upload-ipfs-local.ts",
    "create-sale": "node ./scripts/create-sale.js",
    "close-sale": "npx hardhat closeSale"
  }
